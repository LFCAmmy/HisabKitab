<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/all_current_expense_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/product_name"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/all_current_expense_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/amount"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_current_expense_action"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/all_current_expense_edit"
            android:layout_width="32dp"
            android:layout_height="22dp"
            android:layout_marginStart="31dp"
            android:src="@drawable/ic_edit_product"/>

        <ImageView
            android:id="@+id/all_current_expense_delete"
            android:layout_width="32dp"
            android:layout_height="22dp"
            android:layout_toEndOf="@id/all_current_expense_edit"
            android:src="@drawable/ic_rubbish_bin"/>

    </RelativeLayout>

</RelativeLayout>
