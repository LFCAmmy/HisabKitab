<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GettingStartedFragment"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/group_cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:padding="10dp"
        android:text="@string/join_group_remainder"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.CardView
        android:id="@+id/group_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <EditText
                android:id="@+id/group_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text"
                android:gravity="center"
                android:hint="@string/enter_group_code"
                android:padding="12dp" />

            <Button
                android:id="@+id/join_group_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@drawable/button"
                android:text="@string/join_group"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/create_group_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:padding="15dp"
        android:text="@string/need_group_remainder"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

</RelativeLayout>
