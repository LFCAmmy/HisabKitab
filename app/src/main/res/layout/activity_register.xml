<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include
        android:id="@+id/register_main_toolbar"
        layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/new_username_field"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:hint="@string/username"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/text"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/new_email_field"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@id/new_username_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/email"
        android:padding="12dp"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/text"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/new_password_field"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/new_email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:hint="@string/password"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/text"
        android:drawableStart="@drawable/ic_password_lock"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/register"
        android:background="@drawable/login_button"/>

</RelativeLayout>
