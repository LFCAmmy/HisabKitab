<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/display_group_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_group_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/group_name"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_toEndOf="@id/relative_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/signed_as"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="@string/username"
            android:textSize="16sp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="@string/change_group_name"
        android:textSize="15sp"
        android:background="@drawable/button_layout"/>

    <Button
        android:id="@+id/change_group_name_btn"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/relative_layout"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        android:drawableEnd="@drawable/ic_edit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_group_name_btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/change_group_image"
        android:textSize="15sp"
        android:background="@drawable/button_layout"/>

    <Button
        android:id="@+id/change_group_image_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/change_group_name_btn"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        android:drawableEnd="@drawable/ic_edit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_group_image_btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/change_max_members"
        android:textSize="15sp"
        android:background="@drawable/button_layout"/>

    <Button
        android:id="@+id/change_max_members_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/change_group_image_btn"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        android:drawableEnd="@drawable/ic_edit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_max_members_btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/update_group_members"
        android:textSize="15sp"
        android:background="@drawable/button_layout"/>

    <Button
        android:id="@+id/update_group_members_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/change_max_members_btn"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        android:drawableEnd="@drawable/ic_edit"/>

    <Button
        android:id="@+id/group_token_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        android:text="@string/display_group_token"
        android:textSize="15sp"
        android:background="@drawable/button_layout"/>

</RelativeLayout>