<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Enter the username of the member"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/user_name_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:padding="10dp"
        android:hint="@string/username"
        android:background="@drawable/text_layout"/>

    <Button
        android:id="@+id/proceed_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Proceed"
        android:background="@drawable/button_layout"/>

    <RelativeLayout
        android:id="@+id/relative_layout_one"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/proceed_button"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/group_members"
            android:textSize="18sp"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout_one"
        android:layout_marginTop="20dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
